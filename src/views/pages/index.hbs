<div class="container">
  <div class="row">
    <div class="col-12 index__posts">
      <div class="row">
        {{#if posts}}
        <div class="col-12">
          <h3 class="posts__title">Últimas noticias</h3>
        </div>
        {{/if}}
        {{#each posts }}          
          <div class="col-12 col-lg-4">
            <div class="card-blog">
              <div class="card-blog__header">
                <img src="/profiles/{{this.profile}}" alt="Rotary Club La Paz | {{titleLength this.title}}"
                  class="card-blog__profile">
              </div>
              <div class="card-blog__body">
                <div class="card-bog__details">
                  <p class="card-blog__date d-inline-block mx-2"><i class="fas fa-calendar-alt mx-1"></i> {{dateformat
                    this.published_at}}</p>
                  <p class="card-blog__author d-inline-block mx-2"><i class="fas fa-user mx-1"></i>{{this.author}}
                  </p>  
                </div>
                <h3 class="card-blog__title">
                  {{titleLength (capitalize this.title)}}
                </h3>
                <p class="card-blog__description">
                  {{descriptionLength this.description}}
                </p>
              </div>
              <div class="card-blog__footer">
                <a href="/post/details/{{this.post_id}}" class="text-left text-primary">LEER MÁS <i
                    class="fas fa-arrow-right mx-2"></i></a>
              </div>
            </div>
          </div>
        {{/each}}
        {{#if posts}}          
        <div class="col-12 text-center">
          <a href="/posts" class="btn btn-primary">Ver todos los posts</a>
        </div>
        {{/if}}
      </div>
    </div>

  </div>
  <div class="row" style="padding: 50px 0;">
  {{#if entries}}
    <div class="col-12">
      <h3 class="posts__title">Últimas eventos agendados</h3>
    </div>
  {{/if}}
  {{#each entries }}                 
      <div class="col-12 col-md-4"> 
          <div class="card border-0 shadow">
              <div class="card border-0">
                  <div class="card-body">
                      <a href="/post/details/{{this.post_id}}">
                          <p class="card-title color__primary">{{titleLength this.title}}</p>
                      </a>
                      <p class="m-0"><i class="fas fa-calendar-week mr-2"></i>{{dateformat this.start}} - {{dateformat this.end}}</p>
                      <strong class="m-0"><i class="fas fa-map-marker-alt mr-1"></i>{{this.address}}</strong>
                  </div>
              </div>
          </div>
      </div>
  {{/each}}
  {{#if entries}}
   <div class="col-12 text-center">
      <a href="/calendarios" class="btn btn-primary">Ver todos los eventos</a>
    </div>
  {{/if}}
  </div>
</div>
<div class="container-fluid">
  {{> form}}
</div>

