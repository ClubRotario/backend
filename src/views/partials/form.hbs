<div class="row bg-light form">
    <div class="col-12 col-md-8 col-lg-4 mx-auto">
        <div class="card border-0 shadow">
            <div class="card-body p-4">
            <form method="POST" action="/form" >
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <div class="form-group">
                <h3>¡Déjanos saber tu opinión!</h3>
            </div>
                <div class="form-group">
                    <label for="txtEmail">Dirección de correo electronico</label>
                    <input type="email" class="form-control" id="txtEmail" name="email" required>
                </div>
                <div class="form-group">
                    <label for="txtMessage">Mensaje</label>
                    <textarea name="message" id="txtMessage" class="form-control" style="min-height: 100px; max-height: 100px;" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary" id="btnSend">Enviar</button>
            </form>
            </div>
        </div>
    </div>
</div>